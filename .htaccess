RewriteEngine On
RewriteBase /barber/

# No redirigir si es un archivo en /public
RewriteCond %{REQUEST_URI} ^/barber/public/.*$ [NC]
RewriteRule .* - [L]

# Ignorar archivos/carpetas reales
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Redirigir todo lo dem√°s a index.php
RewriteRule ^(.*)$ index.php [QSA,L]
